package Chap1;
import java.util.Scanner;
public class Pattern1 {
	
	public static void main(String args[])
	{
		Scanner sc = new Scanner(System.in);
		
		int k=0;
		
		System.out.println("Enter the value....");
		int n = sc.nextInt();
		
		for(int i=1;i<=n;i++,k=0)
		{
			for(int j=1;j<=n-i;j++)
			{
				System.out.print("  ");
			}
		    for(k=1;k<=2*i-1;k++)
			{
				System.out.print("@");
			}
			
			System.out.println();
		}
		
		for(int i=n;i>=1;i--)
		{
			for(int j=n-i;j>=1;j--)
			{
				System.out.print("  ");
			}
			for(k=2*i-1;k>=1;k--)
			{
				System.out.print("*");
				
			}
			System.out.println();
		}
		
	}

}
