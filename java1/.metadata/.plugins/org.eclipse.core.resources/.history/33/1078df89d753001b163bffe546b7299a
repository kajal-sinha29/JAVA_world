package Chap1;

public class Pattern1 {
	
	public static void main(String args[])
	{
		int k=0;
		for(int i=1;i<=5;i++,k=0)
		{
			for(int j=1;j<=5-i;j++)
			{
				System.out.print("  ");
			}
		    for(k=1;k<=2*i-1;k++)
			{
				System.out.print("@");
			}
			
			System.out.println();
		}
		
		for(int i=5;i>=1;i--)
		{
			for(int j=5-i;j>=1;j--)
			{
				System.out.print("  ");
			}
			for(k=2*i-1;k>=1;k--)
			{
				System.out.print("*");
				
			}
			System.out.println();
		}
		
	}

}
